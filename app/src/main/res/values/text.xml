<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Text Styles -->
    <style name="TextStyle">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Heading Styles -->
    <style name="TextStyle.Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_heading</item>
    </style>

    <style name="TextStyle.Heading.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle.Heading.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.Heading.Small">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Body Text Styles -->
    <style name="TextStyle.Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Body.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Body.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Accent Text Styles -->
    <style name="TextStyle.Accent">
        <item name="android:textColor">@color/accent_color</item>
    </style>
</resources>