<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shape Appearance for Cards -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius</item>
    </style>

    <!-- Custom Rounded Cards -->
    <style name="ShapeAppearance.App.TopRightBottomRight" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/card_corner_radius</item>
    </style>

    <style name="ShapeAppearance.App.Top" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.App.Bottom" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/card_corner_radius</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button.IconOnly.Circular" parent="Widget.Material3.Button.IconButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_size_medium</item>
    </style>

    <style name="Widget.App.Button.IconOnly.Circular.Small" parent="Widget.App.Button.IconOnly.Circular">
        <item name="iconSize">@dimen/icon_size_small</item>
        <item name="android:minWidth">@dimen/icon_button_size_small</item>
        <item name="android:minHeight">@dimen/icon_button_size_small</item>
    </style>

    <style name="Widget.App.Button.Icon" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/text_primary</item>
        <item name="iconPadding">@dimen/spacing_small</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="backgroundTint">@color/tertiary_container</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="itemIconTint">@color/tertiary</item>
        <item name="itemTextColor">@color/tertiary</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheet.Common" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="BottomSheet.Base" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet.Common</item>
    </style>

    <style name="BottomSheet.Level1" parent="BottomSheet.Base" />
    <style name="BottomSheet.Level2" parent="BottomSheet.Base" />

    <style name="BottomSheetStyle.Base" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle.Level1" parent="BottomSheetStyle.Base">
        <item name="bottomSheetStyle">@style/BottomSheet.Level1</item>
    </style>

    <style name="BottomSheetStyle.Level2" parent="BottomSheetStyle.Base">
        <item name="bottomSheetStyle">@style/BottomSheet.Level2</item>
    </style>
</resources>