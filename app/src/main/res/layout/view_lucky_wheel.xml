<!-- res/layout/view_lucky_wheel.xml -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wheelImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lucky_wheel" />

    <!-- Text for segment 0 (top) -->
    <TextView
        android:id="@+id/segmentText0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:rotation="0"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/segment_text_background"
        android:padding="4dp" />

    <!-- Text for segment 1 (top right) -->
    <TextView
        android:id="@+id/segmentText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:rotation="45"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/segment_text_background"
        android:padding="4dp" />

    <!-- Text for segment 2 (right) -->
    <TextView
        android:id="@+id/segmentText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:rotation="90"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/segment_text_background"
        android:padding="4dp" />

    <!-- Text for segment 3 (bottom right) -->
    <TextView
        android:id="@+id/segmentText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:rotation="135"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/segment_text_background"
        android:padding="4dp" />

    <!-- Text for segment 4 (bottom) -->
    <TextView
        android:id="@+id/segmentText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:rotation="180"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/segment_text_background"
        android:padding="4dp" />

    <!-- Text for segment 5 (bottom left) -->
    <TextView
        android:id="@+id/segmentText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:rotation="225"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/segment_text_background"
        android:padding="4dp" />

    <!-- Text for segment 6 (left) -->
    <TextView
        android:id="@+id/segmentText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="70dp"
        android:rotation="270"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/segment_text_background"
        android:padding="4dp" />

    <!-- Text for segment 7 (top left) -->
    <TextView
        android:id="@+id/segmentText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:rotation="315"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/segment_text_background"
        android:padding="4dp" />
</merge>